@model IEnumerable<CocktailCookbook.Models.Cocktail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cocktails</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Method)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Glassware)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Garnish)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Method)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Glassware)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garnish)
            </td>
            <td>
           
         
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-primary"asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                

            </td>
        </tr>
}
    </tbody>
</table>
