@model CocktailCookbook.Models.Comment

@{
    ViewData["Title"] = "Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reply</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reply">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Time" class="form-control" hidden />

            </div>
            <div class="form-group">
                <label class="control-label">Replying to @ViewBag.OriginalAuthor </label>
                <input asp-for="PostId" class="form-control" value="@Model.PostId" hidden/>

               
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Comment</label>
                <textarea asp-for="Content" class="form-control"></textarea>

                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input asp-for="Author" class="form-control" hidden value="@Model.Author" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
