@model IEnumerable<CocktailCookbook.Models.Job>



<p>
    <a asp-action="Create" asp-controller="Jobs">Create New</a>
</p>

@{
    if (Model.Count() ==  0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Task name
                    </th>
                    <th>
                        Time Created
                    </th>
                    <th>
                        Description
                    </th>
                    <th>Task created by </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @(item.TimeCreated.ToShortTimeString()) @item.TimeCreated.ToShortDateString()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaskDescription)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Creator.NickName)</td>
                        <td>
                            <a asp-action="MarkComplete" asp-controller="Jobs" asp-route-id="@item.Id">Mark Complete</a> |
                            <a asp-action="Details" asp-controller="Jobs" asp-route-id="@item.Id">Details</a>
                            @{if (User.IsInRole("Manager"))
                                {
                                    <a asp-action="Delete" asp-controller="Jobs" asp-route-id="@item.Id">Delete</a>
                                    }
                                }



                            </td>
            
                                </tr>
                }
            </tbody>
        </table>
    }


    else { <p>No current Jobs to Display</p>

    }
}





