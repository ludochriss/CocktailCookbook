@model IEnumerable<CocktailCookbook.Models.CompletedJob>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDescription)
            </th>
            <th>@Html.DisplayNameFor(model => model.Department.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDescription)
            </td>
            <td>
                @Html.DisplayFor(model => item.Department.Name)
            </td>
            <td>
                
                <a class="btn btn btn-info"asp-controller="Jobs" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a class="btn btn-warning" asp-action="MarkedInError" asp-controller="Jobs" asp-route-id="@item.Id">Marked In Error</a> 

                @{ if (User.IsInRole("Manager"))
                        {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }}
            </td>
        </tr>
}
    </tbody>
</table>
